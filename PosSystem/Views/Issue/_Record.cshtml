@model List<IssueRecordViewModel>

@* 發行紀錄 *@
<div>
    @* 日期篩選 *@
    <div>
        <div class="inline-block date-label">
            <label>開始日期</label>
            <input type="text" class="dateFilter-Issue" id="dateFilter-Issue-DateStart" placeholder="" tabindex="-1" readonly />
        </div>

        <div class="inline-block date-label">
            <label>結束日期</label>
            <input type="text" class="dateFilter-Issue" id="dateFilter-Issue-DateEnd" placeholder="" tabindex="-1" readonly />
        </div>
    </div>

    @* 積分發行紀錄 *@
    <table id="table-Issue">
        <thead>
            <tr>
                <th>日期</th>
                <th>類別</th>
                <th>積分</th>
                <th>操作人員</th>
                <th>備註</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UpdateTime.ToString("yyyy/MM/dd HH:mm:ss")</td>
                    <td>@item.OperationType</td>
                    <td>@item.Integration</td>
                    <td>@item.OperatorName</td>
                    <td>@item.Category</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    // 初始化 DataTable
    InitDataTable($('#table-Issue'), {
        Order: [[0, 'desc']],
        ColumnDefs: [{ width: '150px', targets: 0 }]
    });

    // 初始化 DatePicker
    InitDatePicker($('.dateFilter-Issue'));
</script>
